<div class="row mt-5">
    <div class="col-md-6 m-auto">
        <div class="card card-body">
            <h1 class="text-center mb-3">
                <i class="fas fa-user-plus"></i> Write Article or Post
            </h1>
            <% include ./partials/messages %>
            <form action="/articles/create" method="POST">
                <div class="form-group">
                    <label for="name">Title</label>
                    <input type="name" id="title" name="title" class="form-control" placeholder="Post Title"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                <!-- <form>
                    <div class="form-group">
                      <label for="exampleFormControlFile1">Upload your Article Feature Image</label>
                      <input type="file" class="form-control-file" id="imgupload">
                    </div>
                  </form> -->
                <div class="input-group">
                    <label for="desc">Description: <br></label>
                    <textarea rows="10" name="desc" cols="60" class="form-control" aria-label="With textarea"
                        height="300px"></textarea>
                </div>
                <div class="form-group">
                    <label for="name">Author Name:</label>
                    <input type="name" id="author" name="author" class="form-control" placeholder="Enter Name"
                        value="<%= typeof name != 'undefined' ? name : '' %>" />
                </div>
                  </div> 
                <button type="submit" class="btn btn-primary btn-block">
                    Submit
                </button>
            </form>
        </div>
    </div>
</div>